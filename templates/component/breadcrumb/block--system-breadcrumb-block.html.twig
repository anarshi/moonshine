{# remove the id from blocks #}
{{ attach_library(active_theme()~'/breadcrumb') }}

{%
  set classes = [
    admin ? 'breadcrumb-admin',
    admin ? 'w-8',
  ]
%}

<div{{ attributes.addClass(classes).removeAttribute('id') }}>

  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}

  {% block content %}
    {{ content }}
  {% endblock %}

</div>
