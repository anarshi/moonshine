{# input--search.html.twig #}

{% set remove_classes = ['form-search'] %}
{% set placeholder = 'Seek & Destroy'|t %}
<input
{{ attributes.
  removeClass(remove_classes).
  removeAttribute('size').
  setAttribute('autosave', "search").
  setAttribute('results', "10").
  setAttribute('autocomplete','on').
  setAttribute('placeholder', placeholder)
}}
/>
{{ children }}
