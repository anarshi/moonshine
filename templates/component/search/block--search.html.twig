{# remove the id from blocks #}
{%
  set classes = [
  'search-block',
  ]
%}
{{ attach_library(active_theme()~'/search.widget') }}

<div{{ attributes.removeclass('search-block-form').addClass(classes).removeAttribute('id') }}>

  {{ title_prefix }}
  {% if label %}
    <h3{{ title_attributes.addClass('visually-hidden') }}>{{ label }}</h3>
  {% endif %}
  {{ title_suffix }}

  {{ content }}

</div>
